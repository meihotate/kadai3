<section class="height_modification">

<% if @book.errors.any? %>
    <div class="error_explanation1">
    <%= @book.errors.count %> errors happened.
    </div>
    <div class="error_explanation2">
    <% @book.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
    </div>
<% end %>
	
	<div class="editing_box">
    <h2>Editing Book</h2>

        <%= form_for(@book) do |f| %>
          <div class="field">
            <label for="book_title">Title</label><br />
            <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "col-xs-12" %>
          </div>
          <div class="field">
            <label for="book_title">Opinion</label><br />
            <%= f.text_field :body, autofocus: true, autocomplete: "body", class: "col-xs-12" %>
          </div>
          <div class="actions">
            <%= f.submit "Update Book", class: "btn btn-primary col-xs-12 actions" %>
          </div>
        <% end %>
    </div>

</section>