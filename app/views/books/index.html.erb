<section class="height_modification">

<% if @book_new.errors.any? %>
    <div class="error_explanation1">
    <%= @book_new.errors.count %> errors happened.
    </div>
    <div class="error_explanation2">
    <% @book_new.errors.full_messages.each do |message| %>
        <%= message %>
    <% end %>
    </div>
<% end %>

<div class="row">

  <div class="col-xs-3">

    <h2>User info</h2>
    <%= attachment_image_tag current_user, :profile_image, :fill, 60, 60, class: "pull-left profile-thumb margin_image", fallback: "no_image.jpg" %>

    <table class="table">
      <tbody><tr></tr>
      <tr>
        <th>name</th>
        <th><%= current_user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= current_user.introduction %></th>
      </tr>
      </tbody>
    </table>

    <div class="botton">
      <%= link_to "", edit_user_path(current_user.id), class:"col-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    </div>

    <section class="height_modification">
    <h2>New book</h2>
    </section>

        <%= form_for(@book_new) do |f| %>
          <div class="field">
            <label for="book_title">Title</label><br />
            <%= f.text_field :title, autofocus: true, autocomplete: "title", class: "col-xs-12" %>
          </div>
          <div class="field">
            <label for="book_title">Opinion</label><br />
            <%= f.text_field :body, autofocus: true, autocomplete: "body", class: "col-xs-12" %>
          </div>
          <div class="actions">
            <%= f.submit "Create Book", class: "btn btn-primary col-xs-12 actions" %>
          </div>
        <% end %>

  </div>

  <div class="col-xs-9">
    <h2>Books</h2>

    <table class="table table-hover table-inverse">
		  <thead>
		    <tr>
		      <th></th>
		      <th>Title</th>
		      <th>Opinion</th>
		      <th colspan="3"></th>
		    </tr>
		  </thead>
		  <tbody>
          <% @books.each do |book| %>
		      <tr>
		        <td>
              <%= link_to user_path(book.user.id) do %>
              <%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, class: "pull-left profile-thumb margin_icon", fallback: 'no_image.jpg', size: "40x40" %>
              <% end %>
            </td>
		        <td>
              <%= link_to book_path(book.id) do %>
                <%= book.title %>
              <% end %>
            </td>
		        <td>
              <%= book.body %>
            </td>
		      </tr>
          <% end %>
		  </tbody>
	</table>
  </div>

</div>
</section>